{
  "compilerOptions": {
    "target": "es5",
    "outDir": "dist/esm",
    "lib": [
      "es6", "dom", "es2016", "es2017"
    ],
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react",
    "declaration": true,
    "typeRoots": [
      "index.d.ts",
      "node_modules/@types"
    ]
  },
  "include": [
    "src/packages"
  ],
  "exclude": [
    "node_modules"
  ]
}
